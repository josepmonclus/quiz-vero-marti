<div id="lastPopup" class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50 rounded hidden">
    <div class="bg-gray-200 p-4 rounded shadow-lg w-3/4 md:w-1/2 lg:w-1/3">
        <p class="popup-text mt-4">TEST FINAL</p>
        <button class="close-lastPopup float-right bg-neon-light hover:bg-neon-medium-light text-white font-bold px-2 mt-2 rounded focus:outline-none focus:shadow-outline">
            ❤️
        </button>
    </div>
</div>

<script >

    let lastPopup:  HTMLElement  = document.getElementById('lastPopup');
    let closeBtn: HTMLElement = lastPopup.querySelector('.close-lastPopup');
    let modalText = lastPopup.querySelector('.popup-text');

    closeBtn.onclick = function () {
        lastPopup.classList.add('hidden');
    };

    window.onclick = function (event) {
        if (event.target == lastPopup) {
            lastPopup.classList.add('hidden');
        }
    };

    document.querySelectorAll('.open-lastPopup').forEach((button: HTMLElement) => {
            button.onclick = function () {
            modalText.textContent = "LAST TEST";
            lastPopup.classList.remove('hidden');
        };
    });

</script>