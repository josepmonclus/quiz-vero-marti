<div id="popup" class="fixed inset-0 flex items-center justify-center bg-neon-dark bg-opacity-50 rounded hidden">
    <div class="bg-neon-light p-4 rounded shadow-lg w-3/4 md:w-1/2 lg:w-1/3">
        <p class="popup-text mt-4 text-neon-dark">...</p>
        <button class="close-popup float-right bg-neon-dark hover:bg-opacity-80 text-neon-light font-bold px-2 mt-2 rounded focus:outline-none focus:shadow-outline">
            Ok ðŸ˜“
        </button>
    </div>
</div>

<script >
    import { msgs_help } from '../data/data';

    let popup:  HTMLElement  = document.getElementById('popup');
    let closeBtn: HTMLElement = popup.querySelector('.close-popup');
    let modalText = popup.querySelector('.popup-text');

    closeBtn.onclick = function () {
        popup.classList.add('hidden');
    };

    window.onclick = function (event) {
        if (event.target == popup) {
            popup.classList.add('hidden');
        }
    };

    document.querySelectorAll('.open-popup').forEach((button: HTMLElement) => {
            button.onclick = function () {
            const text = getRandomElement(msgs_help);
            modalText.textContent = text;
            popup.classList.remove('hidden');
        };
    });

    function getRandomElement(array) {
        const randomIndex = Math.floor(Math.random() * array.length);
        return array[randomIndex];
    }
</script>