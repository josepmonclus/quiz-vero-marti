---
interface Props {
	question: string;
	answer: string;
}

const { question, answer } = Astro.props;
---

<div class="w-full max-w">
    <form class="bg-gray-200 shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label class="block text-neon-dark text-sm font-bold mb-2" for="answer">
                {question}
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-neon-light leading-tight focus:outline-none focus:shadow-outline" 
                id="answer" 
                type="text" 
                placeholder="Resposta">
        </div>
        <div class="flex items-center justify-center pt-5">
            <button class="bg-neon-light hover:bg-neon-medium-light text-white font-bold py-2 px-6 mx-10 rounded focus:outline-none focus:shadow-outline" type="button">
              Ho tenim!
            </button>
            <a class="inline-block align-baseline font-bold text-sm text-neon-light hover:text-neon-medium-light" href="#">
              Ni puta idea!
            </a>
          </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
        Made with ❤️️ by Josep, Bernal & Pol
      </p>
</div>

<style>
    .question {
        border: 1px solid rgba(var(--neon-medium-light), 80%);
        border-radius: 8px;
        padding: 3rem 0;
        /* background: linear-gradient(45deg, rgba(var(--neon-medium-light), 66%), rgba(var(--neon-medium-dark), 33%)); */
        background-color: rgb(var(--neon-medium-dark));
        text-align: center;
        font-size: 2rem;
    }

    .question-text {
        margin-bottom: 50px;
    }
</style>