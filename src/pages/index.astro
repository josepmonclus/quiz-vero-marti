---
import Layout from '../layouts/Layout.astro';
import Question from '../components/Question.astro'
import Popup from '../components/Popup.astro'
import Countdown from '../components/Countdown.astro';
---
<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 100%;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-top: 1em;
		text-shadow:
			-1px -1px 0 rgb(var(--neon-dark)),  
			1px -1px 0 rgb(var(--neon-dark)),
			-1px 1px 0 rgb(var(--neon-dark)),
			3px 3px 0 rgb(var(--neon-dark));
	}

	h1 span {
		text-shadow:
			-1px -1px 0 rgb(var(--neon-light)),  
			1px -1px 0 rgb(var(--neon-light)),
			-1px 1px 0 rgb(var(--neon-light)),
			3px 3px 0 rgb(var(--neon-light));
	}

	@media (max-width: 768px) {
		main {
			padding: 0.5rem;
			font-size: 18px;
		}

		h1 {
			font-size: 3rem;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 0.5rem;
			font-size: 16px;
		}

		h1 {
			font-size: 2.5rem;
		}
	}
</style>

<Layout title="Give me my fuckin money!">
	<main>
		<h1 class="text-neon-light my-5">
			Quiz <span class="text-neon-dark">Lau</span> & <span class="text-neon-dark">Oscar</span>
		</h1>

		<!-- <Countdown /> -->
		
		<Question 
			question=0
		/>

		<Popup text='Hola'/>
	</main>
</Layout>

<script>
	localStorage.setItem('hearthSize', '0.75');
</script>


